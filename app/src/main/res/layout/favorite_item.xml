<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/rectangle41">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/favoriteImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                app:srcCompat="@drawable/user" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/fav_nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fav_nameTextView">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp">


                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:contentDescription="Choose size"
                            app:srcCompat="@drawable/edit" />

                        <TextView
                            android:id="@+id/sizeTextView"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:paddingTop="3sp"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="Choose color"
                            app:srcCompat="@drawable/edit" />

                        <TextView
                            android:id="@+id/colorTextView"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:paddingTop="3sp"
                            android:textAlignment="center"
                            android:textSize="10sp" />

                    </RelativeLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/priceTextView">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btnDel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="Delete Item"
                            android:onClick="onClick"
                            android:textAlignment="center"
                            app:srcCompat="@drawable/delete"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Xóa"
                            android:textSize="9sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btnAddCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"

                            android:background="@android:color/transparent"
                            android:contentDescription="Add to cart"
                            android:onClick="onCLick"
                            android:textAlignment="center"
                            app:srcCompat="@drawable/addcart"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Thêm vào giỏ"
                            android:textSize="9sp" />
                    </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"

                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:text = "Số lượng"
                            android:textSize = "11sp"
                            android:textAlignment="center"
                            app:srcCompat="@drawable/plus"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/quantityTextView"
                            android:textAlignment="center"
                            android:layout_width="20dp"
                            android:layout_height="match_parent" />

                    <ImageButton
                        android:id="@+id/btnNumMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="Plus number"
                        android:onClick="onClick"
                        android:textAlignment="center"
                        app:srcCompat="@drawable/minus"
                        tools:ignore="TouchTargetSizeCheck" />


                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
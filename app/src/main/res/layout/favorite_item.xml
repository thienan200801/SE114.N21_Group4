<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layoutfav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/favorite_item_bg"
            android:layout_centerHorizontal="true"/>


        <RelativeLayout
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignRight="@+id/imageView6"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/user" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:text="Túi Gucci fjaslkjf;asdkf;ầ;sfdja;skfjas;fja;sfja;skfja;"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/planets_spinner"
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_margin="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="$price"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/btnDel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="Delete Item"
                            android:onClick="onCLick"
                            android:textAlignment="center"
                            app:srcCompat="@drawable/delete"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageButton
                            android:id="@+id/btnAddCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="Add to cart"
                            android:onClick="onCLick"
                            android:textAlignment="center"
                            app:srcCompat="@drawable/addcart"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageButton
                            android:id="@+id/btnNumPlus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="Plus number"
                            android:onClick="onCLick"
                            android:textAlignment="center"
                            app:srcCompat="@drawable/plus"
                            tools:ignore="TouchTargetSizeCheck" />
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"/>
                        <ImageButton
                            android:id="@+id/btnNumMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:contentDescription="Plus number"
                            android:onClick="onCLick"
                            android:textAlignment="center"
                            app:srcCompat="@drawable/minus"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>





</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/local_mall"
        android:paddingStart="25dp"
        android:paddingTop="20dp"
        android:paddingEnd="25dp"

        android:paddingBottom="25dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/cart_count"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignEnd="@id/cart"
        android:layout_alignBottom="@id/cart"
        android:background="@drawable/badge_background"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/cart_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cart_count"
        android:layout_alignTop="@+id/cart_count"
        android:layout_alignEnd="@+id/cart_count"
        android:layout_alignBottom="@+id/cart_count"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="8sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fav_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/cart"
            android:layout_toRightOf="@id/imageButton3"
            android:fontFamily="@font/dancing_script_bold"
            android:text="Audace"
            android:textAlignment="center"
            android:textColor="#003A5D"
            android:textSize="30sp" />
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:onClick="onButtonClick"
            android:padding="16dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/menu_bg" />

        <ImageButton
            android:id="@+id/cart"
            android:onClick="onButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Cart"
            android:padding="20dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/local_mall" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/search_bar"
            android:fontFamily="@font/dancing_script_bold"
            android:textAlignment="center"
            android:textColor="#003A5D"
            android:textSize="30sp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        <ImageButton
            android:id="@+id/btnSearch"
            android:onClick="onButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Search"
            android:padding="16dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/mdi_magnify" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/result"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <TextView
            android:id="@+id/txtKQTK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả tìm kiếm:"/>


        <TextView
            android:id="@+id/txtResult"
            android:onClick="onButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Search"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sắp xếp theo:"/>


        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Search"
            android:layout_alignEnd="@+id/txtFilter"
            tools:ignore="TouchTargetSizeCheck" />




    </RelativeLayout>



    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
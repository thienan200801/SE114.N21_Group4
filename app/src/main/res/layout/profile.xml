<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fav_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans"
            android:text="Tài khoản của bạn"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:padding="16dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/back" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutinfo"
        android:layout_below="@+id/fav_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rectangle18"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="81dp" />

        <RelativeLayout
            android:layout_alignRight="@id/imageView6"
            android:layout_alignTop="@id/imageView6"
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:contentDescription="Chỉnh sửa"
                android:onClick="onCLick"
                android:textAlignment="center"
                app:srcCompat="@drawable/editpencil"
                tools:ignore="TouchTargetSizeCheck" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"

            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/open_sans_condensed_light_italic"
                    android:gravity="center"
                    app:srcCompat="@drawable/user"
                 />

                <LinearLayout
                    android:id="@+id/profilelayout"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:text = "Tên"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text = "SĐT:"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text = "Email:"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text = "Ngày sinh:"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:text = "xxxxxxxxxxxxxxx"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text = "xxxxxxxxxxxxxxx"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text = "xxxxxxxxxxxxxxx"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text = "xxxxxxxxxxxxxxx"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutvoucher"
        android:layout_below="@+id/layoutinfo"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Chỉnh sửa"
            android:onClick="onClick"
            android:textAlignment="center"
            app:srcCompat="@drawable/voucherpro5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Voucher" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutorder"
        android:layout_below="@+id/layoutvoucher"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Chỉnh sửa"
            android:onClick="onClick"
            android:textAlignment="center"
            app:srcCompat="@drawable/order"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Đơn hàng của tôi" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/layoutorder"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Chỉnh sửa"
            android:onClick="onClick"
            android:textAlignment="center"
            app:srcCompat="@drawable/cartpro5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Giỏ hàng" />
    </RelativeLayout>




</RelativeLayout>